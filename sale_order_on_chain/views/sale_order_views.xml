<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_sale_order_on_chain" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <!--            <field name="groups_id" eval="[(4, ref('sale.group_auto_done_setting'))]"/>-->
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_order_on_chain"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-cloud-upload icon"
                attrs="{'invisible': ['|', ('txid', '!=', False), ('state', '!=', 'sale')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Order</span>
                        <span class="o_stat_text">On-chain</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="inside">
                <group>
                    <group name="blockchain" string="BlockChain">
                        <field name="txid" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
