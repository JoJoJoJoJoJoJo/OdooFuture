<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_normal_form_view_inherit_maintenance_purchase" model="ir.ui.view">
        <field name="name">maintenance.product.product.purchase.order</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="groups_id" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="action_view_eq"
                    type="object" icon="fa-cogs" attrs="{'invisible': [('purchase_ok', '=', False)]}">
                    <span class="o_stat_value">
                        <field name="equipment_count"/>
                    </span>
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Equipments</span>
                    </div>
                </button>
            </div>
            <xpath expr="//field[@name='description_purchase']" position="after">
                <field name="website" widget="url"/>
            </xpath>
        </field>
    </record>    
</odoo>