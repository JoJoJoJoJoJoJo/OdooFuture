<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_sign_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.sign.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="send_report_to_sign" type="object" string="Send Report to Sign" class="btn-primary" states="sale,done"/>
            </xpath>
        </field>
    </record>
</odoo>
